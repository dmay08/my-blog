<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title><%= title %></title>
</head>

<body>
  <h2>My Posts</h2>
  <ul>
    <% blogPosts.forEach(function(t, i) { %>
    <a href="/blog-posts/<%= i %>"><%= t.title %></a>
    <p><%= t.body %></p>
    <form method="POST" action="/blog-posts/<%= i %>?_method=DELETE"> 
      <button type="submit">Delete</button>
    </form> 
    </li>
    <% }); %>
  </ul>
  <form action="/blog-posts" method="POST">
    <h3>Title</h3>
    <input type="text" name="newTitle">
    <h4>Body</h4>
    <input type="text" name="newPost">
    <input type="submit" value="Create Post">
  </form>

</body>

</html>